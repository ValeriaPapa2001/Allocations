@model IEnumerable<TimesheetGridViewModel>

@{
    ViewData["Title"] = "Gestione dei Timesheet";
}

<h1>Timesheet</h1>

<a asp-action="Create" class="btn btn-success">
    Aggiungi  <i class="bi bi-plus-circle"></i>
</a>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Dipendente</th>
            <th>Data</th>
            <th>Ore</th>
            <th>Attività</th>
            <th> Commessa </th>
            <th> Cliente </th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>
                    @t.EmployeeName
                </td>
                <td>
                    @t.StartActivity.ToString("d")
                </td>
                <td>
                    @t.HourActivity
                </td>
                <td>
                    @t.ActivityName
                </td>
                <td>
                    @t.JobName
                </td>
                <td>
                    @t.CustomerName
                </td>
                <td>

                    <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-primary"><i class="bi bi-pencil"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

